<configuration>

    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Marker>DENY_MARKER</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <appender name="LIST" class="ch.qos.logback.core.read.ListAppender">
    </appender>

    <root level="TRACE">
        <appender-ref ref="LIST"/>
    </root>
</configuration>